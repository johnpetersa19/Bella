<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="Bella">
  <schema id="io.github.josephmawa.Bella" path="/io/github/josephmawa/Bella/">
    <key name="window-width" type="i">
      <default>600</default>
    </key>
    <key name="window-height" type="i">
      <default>500</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="color-scheme" type="i">
      <range min="0" max="4" />
      <default>0</default>
    </key>
    <key name="precision" type="i">
      <range min="0" max="10" />
      <default>5</default>
    </key>
    <key name="color-format" type="s">
      <choices>
        <choice value="name" />
        <choice value="hex" />
        <choice value="rgb" />
        <choice value="rgb_percent" />
        <choice value="hsl" />
        <choice value="hsv" />
        <choice value="cmyk" />
        <choice value="hwb" />
        <choice value="xyz" />
        <choice value="lab" />
        <choice value="lch" />
        <choice value="oklab" />
        <choice value="oklch" />
      </choices>
      <default>"rgb"</default>
    </key>
  </schema>
</schemalist>